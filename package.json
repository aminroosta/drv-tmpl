    "format": "prettier --write ."
  },
  "dependencies": {
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "prettier": "2.3.0",
    "ts-jest": "^26.5.6"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/t/**/*.ts",
      "**/?(*.)+test.ts"
    ],
    "preset": "ts-jest"
  }
}
